@model IEnumerable<LogRep.Models.Recipe>

@{
    ViewData["Title"] = "Recipe Log";
}

<h1>@ViewData["Title"]</h1>
<div class="form-group">
    <form asp-controller="Home" asp-action="Log" method="post">
        <label for="searchString">Search by name:</label>
        <input type="text" class="form-control" id="searchString" name="searchString" value="@ViewBag.SearchString" />
        <button type="submit" class="btn btn-primary">Search</button>
    </form>
</div>

<form asp-controller="Home" asp-action="Index">
    <p>
        Recipe Name: <input type="text" name="SearchString" />
        <input type="submit" value="Filter" />
    </p>
</form>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Ingredients</th>
            <th>Instructions</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var recipe in Model)
{
    <tr>
        <td>@recipe.Name</td>
        <td>@recipe.Description</td>
        <td>@recipe.Ingredients</td>
        <td>@recipe.Instructions</td>
        <td>
            <a asp-action="Edit" asp-route-id="@recipe.Id">Edit</a> 
           @* <a asp-action="Delete" asp-route-id="@recipe.Id">Delete</a>*@
            <a asp-action="Delete" asp-route-id="@recipe.Id" onclick="return confirm('Are you sure you want to delete this recipe?')">Delete</a>
        </td>
    </tr>
}

        
    </tbody>
</table>
